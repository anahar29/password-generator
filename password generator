#Intro 
print()
intro = "Welcome to the password generator! "
completed_intro = intro.center(73, " ")
print(completed_intro)
print()

# Get inputs from the User
name = input("Enter name: ")
print()
birth_year = input("Enter your birth year: ")
print()
last_name = input("Enter your last name: ")
print()
char = input("Enter a special character: ")

# Create your password
portion1 = name[::-1].upper() 
portion2 = birth_year[2:4]
portion3 = last_name[0:3].lower()
password = portion1 + portion2 + portion3 + char

# Show the user the new password
print()
print("A good password is:" , password, end='')


